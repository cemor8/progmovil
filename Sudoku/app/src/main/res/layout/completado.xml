<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:layout_width="334dp"
            android:layout_height="348dp"
            app:srcCompat="@drawable/congrats" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="38dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="38dp"/>
    <Button
            android:text="Nueva Partida"
            android:layout_width="195dp"
            android:layout_height="85dp" android:id="@+id/button5"
            android:backgroundTint="@color/azulOscuro" android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="100dp"
            android:layout_marginTop="70dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:onClick="nueva"/>
    <Button
            android:text="Salir"
            android:layout_width="195dp"
            android:layout_height="85dp" android:id="@+id/button6"
            android:backgroundTint="@color/azulOscuro" android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="100dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/button5" android:onClick="salir"/>
</androidx.constraintlayout.widget.ConstraintLayout>