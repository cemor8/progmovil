<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#000000">
    <TextView
            android:layout_width="331dp"
            android:layout_height="119dp" android:id="@+id/mostrarOperacion"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="35dp"
            android:layout_marginEnd="38dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:textAlignment="center" android:textSize="34sp" android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="53dp"/>
    <androidx.gridlayout.widget.GridLayout
            android:layout_width="327dp"
            android:layout_height="354dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="96dp">


        <Button
                android:text="8"
                android:layout_width="68dp"
                android:layout_height="64dp" android:id="@+id/btn8"
                android:onClick="meterNumero"
                app:layout_row="1" app:layout_column="1" android:backgroundTint="#332F2C"
                app:cornerRadius="50dp"
                android:layout_margin="4dp"/>
        <Button
                android:text="7"
                android:layout_width="68dp"
                android:layout_height="64dp" android:id="@+id/btn7"
                android:onClick="meterNumero"
                android:layout_margin="4dp"
                app:layout_row="1" app:layout_column="0" android:backgroundTint="#332F2C" app:cornerRadius="50dp"/>
        <Button
                android:text="9"
                android:layout_width="70dp"
                android:layout_height="61dp" android:id="@+id/btn9"
                android:onClick="meterNumero"
                android:layout_margin="4dp"
                app:layout_row="1" app:layout_column="2" android:backgroundTint="#332F2C" app:cornerRadius="50dp"
                style="@style/Widget.Material3.Button"/>
        <Button
                android:text="/"
                android:layout_width="68dp"
                android:layout_height="64dp" android:id="@+id/btnDividir"
                android:onClick="meterSigno"
                android:layout_margin="4dp"
                app:layout_row="2" app:layout_column="3" android:backgroundTint="#f7bd56" app:cornerRadius="50dp"/>
        <Button
                android:text="4"
                android:layout_width="68dp"
                android:layout_margin="4dp"
                android:layout_height="64dp" android:id="@+id/btn4"
                android:onClick="meterNumero"
                app:layout_row="2" app:layout_column="0" android:backgroundTint="#332F2C" app:cornerRadius="50dp"/>
        <Button
                android:text="5"
                android:layout_width="68dp"
                android:layout_margin="4dp"
                android:layout_height="64dp" android:id="@+id/btn5"
                android:onClick="meterNumero"
                app:layout_row="2" app:layout_column="1" android:backgroundTint="#332F2C" app:cornerRadius="50dp"/>
        <Button
                android:text="6"
                android:layout_width="68dp"
                android:layout_margin="4dp"
                android:layout_height="64dp" android:id="@+id/btn6"
                android:onClick="meterNumero"
                app:layout_row="2"
                app:layout_column="2" android:backgroundTint="#332F2C" app:cornerRadius="50dp"/>
        <Button
                android:text="1"
                android:layout_width="68dp"
                android:layout_margin="4dp"
                android:layout_height="64dp" android:id="@+id/btn1"
                android:onClick="meterNumero"
                app:layout_row="3" app:layout_column="0" android:backgroundTint="#332F2C" app:cornerRadius="50dp"/>
        <Button
                android:text="2"
                android:layout_width="68dp"
                android:layout_margin="4dp"
                android:layout_height="64dp" android:id="@+id/btn2"
                android:onClick="meterNumero"
                app:layout_row="3" app:layout_column="1" android:backgroundTint="#332F2C" app:cornerRadius="50dp"/>
        <Button
                android:text="3"
                android:layout_width="68dp"
                android:layout_margin="4dp"
                android:layout_height="61dp" android:id="@+id/btn3"
                android:onClick="meterNumero"
                app:layout_row="3"
                app:layout_column="2" android:backgroundTint="#332F2C" app:cornerRadius="50dp"/>
        <Button
                android:text="âˆš"
                android:layout_margin="4dp"
                android:layout_width="68dp"
                android:layout_height="64dp" android:id="@+id/btnRaiz2"
                android:onClick="meterRaiz"
                app:layout_row="4" app:layout_column="3" android:backgroundTint="#f7bd56" app:cornerRadius="50dp"/>
        <Button
                android:text="."
                android:layout_width="68dp"
                android:layout_margin="4dp"
                android:layout_height="64dp" android:id="@+id/btnComa"
                android:onClick="meterNumero"
                app:layout_row="4" app:layout_column="2" android:backgroundTint="#332F2C" app:cornerRadius="50dp"/>
        <Button
                android:text="+"
                android:layout_width="68dp"
                android:layout_margin="4dp"
                android:layout_height="64dp" android:id="@+id/btnSumar"
                android:onClick="meterSigno"
                app:layout_row="3" app:layout_column="3" android:backgroundTint="#f7bd56" app:cornerRadius="50dp"/>
        <Button
                android:text="CE"
                android:layout_width="68dp"
                android:layout_margin="4dp"
                android:layout_height="64dp" android:id="@+id/btnEliminarUltimo"
                app:layout_row="1"
                app:layout_column="3" android:backgroundTint="#f7bd56" app:cornerRadius="50dp"
                android:onClick="eliminarUltimo"/>
        <Button
                android:text="="
                android:layout_width="68dp"
                android:layout_margin="4dp"
                android:layout_height="64dp" android:id="@+id/btnIgual"
                android:onClick="calcular"
                app:layout_row="4" app:layout_column="0" android:backgroundTint="#332F2C" app:cornerRadius="50dp"/>
        <Button
                android:text="AC"
                android:layout_width="68dp"
                android:layout_margin="4dp"
                android:layout_height="64dp" android:id="@+id/btnEliminarTodo"
                android:onClick="eliminarTotal"
                app:layout_row="0"
                app:layout_column="3" android:backgroundTint="#CDCDCD" android:textColor="@color/black"
                app:cornerRadius="50dp"/>
        <Button
                android:text="*"
                android:layout_width="68dp"
                android:layout_margin="4dp"
                android:layout_height="64dp" android:id="@+id/btnMultiplicar"
                android:onClick="meterSigno"
                app:layout_row="0" app:layout_column="2" android:backgroundTint="#CDCDCD"
                android:textColor="@color/black" app:cornerRadius="50dp"/>
        <Button
                android:text="^"
                android:layout_width="68dp"
                android:layout_margin="4dp"
                android:layout_height="64dp" android:id="@+id/btnExponer"
                android:onClick="meterSigno"
                app:layout_row="0"
                app:layout_column="1" android:backgroundTint="#CDCDCD" android:textColor="@color/black"
                app:cornerRadius="50dp"/>
        <Button
                android:text="-"
                android:layout_width="68dp"
                android:layout_margin="4dp"
                android:layout_height="64dp" android:id="@+id/btnRestar"
                android:onClick="meterSigno"
                app:layout_row="0" app:layout_column="0" android:backgroundTint="#CDCDCD"
                android:textColor="@color/black" app:cornerRadius="50dp"/>
        <Button
                android:text="0"
                android:layout_width="68dp"
                android:layout_margin="4dp"
                android:layout_height="64dp" android:id="@+id/btn0"
                android:onClick="meterNumero"
                android:backgroundTint="#332F2C" app:cornerRadius="50dp"
                app:layout_row="4"
                app:layout_column="1"/>
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>