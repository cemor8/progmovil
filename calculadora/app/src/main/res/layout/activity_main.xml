<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="."
            android:layout_width="68dp"
            android:layout_height="64dp" android:id="@+id/btnComa"
            app:layout_constraintTop_toBottomOf="@+id/btn3"
            android:layout_marginTop="12dp" app:layout_constraintEnd_toStartOf="@+id/btnRaiz2"
            android:layout_marginEnd="6dp" android:onClick="meterNumero"/>
    <Button
            android:text="AC"
            android:layout_width="68dp"
            android:layout_height="64dp" android:id="@+id/btnEliminarTodo"
            android:layout_marginTop="200dp"
            app:layout_constraintTop_toBottomOf="@+id/mostrarOperacion" android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/btn9" android:onClick="eliminarTotal"/>
    <Button
            android:text="√ "
            android:layout_width="68dp"
            android:layout_height="64dp" android:id="@+id/btnRaiz2"
            app:layout_constraintEnd_toStartOf="@+id/btnSumar" android:layout_marginEnd="8dp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/btnExponer"/>
    <Button
            android:text="CE"
            android:layout_width="68dp"
            android:layout_height="64dp" android:id="@+id/btnEliminarUltimo"
            app:layout_constraintEnd_toStartOf="@id/btnMultiplicar" android:layout_marginEnd="12dp"
            app:layout_constraintTop_toBottomOf="@+id/btnEliminarTodo"/>
    <Button
            android:text="3"
            android:layout_width="68dp"
            android:layout_height="61dp" android:id="@+id/btn3"
            app:layout_constraintTop_toBottomOf="@+id/btn6"
            android:layout_marginTop="4dp" android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@+id/btn2" android:onClick="meterNumero"/>
    <Button
            android:text="2"
            android:layout_width="68dp"
            android:layout_height="64dp" android:id="@+id/btn2"
            app:layout_constraintEnd_toStartOf="@+id/btn3"
            app:layout_constraintStart_toEndOf="@+id/btn1" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnRaiz" android:onClick="meterNumero"/>
    <Button
            android:text="1"
            android:layout_width="68dp"
            android:layout_height="64dp" android:id="@+id/btn1"
            app:layout_constraintEnd_toStartOf="@+id/btn2" app:layout_constraintTop_toBottomOf="@+id/btn4"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:onClick="meterNumero"/>
    <Button
            android:text="^"
            android:layout_width="68dp"
            android:layout_height="64dp" android:id="@+id/btnExponer"
            app:layout_constraintTop_toBottomOf="@+id/btnEliminarUltimo" android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/btn3"/>
    <Button
            android:text="-"
            android:layout_width="68dp"
            android:layout_height="64dp" android:id="@+id/btnRestar"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@id/btnExponer"
            app:layout_constraintTop_toBottomOf="@+id/btnMultiplicar"/>
    <Button
            android:text="4"
            android:layout_width="68dp"
            android:layout_height="64dp" android:id="@+id/btn4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="13dp"
            android:layout_marginTop="2dp" app:layout_constraintTop_toBottomOf="@+id/btn7"
            android:onClick="meterNumero"/>
    <Button
            android:text="/"
            android:layout_width="68dp"
            android:layout_height="64dp" android:id="@+id/btnDividir"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="202dp"
            app:layout_constraintTop_toBottomOf="@+id/mostrarOperacion"/>
    <Button
            android:text="+"
            android:layout_width="68dp"
            android:layout_height="64dp" android:id="@+id/btnSumar"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/btnRestar"/>
    <Button
            android:text="√ "
            android:layout_width="68dp"
            android:layout_height="64dp" android:id="@+id/btnRaiz"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="13dp"
            android:layout_marginBottom="14dp" app:layout_constraintBottom_toTopOf="@+id/btnIgual"
            app:layout_constraintEnd_toStartOf="@+id/btn0" android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/btn1" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="0"
            android:layout_width="68dp"
            android:layout_height="64dp" android:id="@+id/btn0"
            app:layout_constraintEnd_toStartOf="@+id/btnComa" app:layout_constraintStart_toEndOf="@+id/btnRaiz"
            app:layout_constraintBottom_toTopOf="@+id/btnIgual"
            android:layout_marginTop="11dp" app:layout_constraintTop_toBottomOf="@+id/btn2"
            app:layout_constraintVertical_bias="0.0" android:onClick="meterNumero"/>
    <Button
            android:text="="
            android:layout_width="342dp"
            android:layout_height="80dp" android:id="@+id/btnIgual"
            android:textSize="30dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp" android:layout_marginEnd="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnComa" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.297"/>
    <Button
            android:text="5"
            android:layout_width="68dp"
            android:layout_height="64dp" android:id="@+id/btn5"
            app:layout_constraintEnd_toStartOf="@+id/btn6" android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/btn8" android:onClick="meterNumero"/>
    <Button
            android:text="6"
            android:layout_width="68dp"
            android:layout_height="64dp" android:id="@+id/btn6"
            app:layout_constraintEnd_toStartOf="@+id/btnEliminarUltimo" android:layout_marginEnd="12dp"
            app:layout_constraintTop_toBottomOf="@+id/btn9" android:onClick="meterNumero"/>
    <Button
            android:text="9"
            android:layout_width="70dp"
            android:layout_height="61dp" android:id="@+id/btn9"
            android:layout_marginTop="202dp"
            app:layout_constraintTop_toBottomOf="@+id/mostrarOperacion" app:layout_constraintStart_toEndOf="@+id/btn8"
            android:onClick="meterNumero"/>
    <Button
            android:text="7"
            android:layout_width="68dp"
            android:layout_height="64dp" android:id="@+id/btn7"
            android:layout_marginTop="202dp"
            app:layout_constraintTop_toBottomOf="@+id/mostrarOperacion" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="13dp" android:onClick="meterNumero"/>
    <Button
            android:text="8"
            android:layout_width="68dp"
            android:layout_height="64dp" android:id="@+id/btn8"
            android:layout_marginTop="202dp"
            app:layout_constraintTop_toBottomOf="@+id/mostrarOperacion" app:layout_constraintStart_toEndOf="@+id/btn7"
            android:onClick="meterNumero"/>
    <Button
            android:text="*"
            android:layout_width="68dp"
            android:layout_height="64dp" android:id="@+id/btnMultiplicar"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDividir"/>
    <TextView
            android:layout_width="320dp"
            android:layout_height="71dp" android:id="@+id/mostrarOperacion"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="35dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="30dp" android:layout_marginEnd="38dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>