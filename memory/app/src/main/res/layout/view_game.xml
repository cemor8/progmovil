<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/black" android:id="@+id/fondo">
    <androidx.gridlayout.widget.GridLayout
            android:layout_width="329dp"
            android:layout_height="307dp" android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="66dp" app:layout_constraintTop_toBottomOf="@id/mostrarTurnos"
            android:id="@+id/gridLayout"/>
    <TextView
            android:text="Turnos: "
            android:layout_width="171dp"
            android:layout_height="56dp" android:id="@+id/mostrarTurnos"
            android:textColor="@color/white" android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="104dp"/>
    <Button
            android:text="Reset"
            android:layout_width="176dp"
            android:layout_height="68dp" android:id="@+id/btnReset"
            android:backgroundTint="#4CAF50" android:textColor="@color/white"
            android:textSize="24sp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="117dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="65dp"
            android:layout_marginEnd="118dp" app:layout_constraintEnd_toEndOf="parent" android:onClick="reset"/>
</androidx.constraintlayout.widget.ConstraintLayout>